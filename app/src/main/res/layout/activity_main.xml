<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghughutibasuti.texttospeech.MainActivity"
    android:background="@drawable/ui_background_gradient"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/scrollView2"

    android:layout_marginTop="30dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    >
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text=""
        android:hint="   Tap Mic Button and Speak Something..."
        android:background="@drawable/custom_text_view"
        android:textSize="19sp"
        />

</ScrollView>

    <Button
        android:id="@+id/share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/scrollView2"
        android:background="@drawable/ic_share"
        android:layout_marginLeft="300dp"
        android:layout_marginStart="300dp"
        android:longClickable="true"

        />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/mic_circle"
        android:layout_marginTop="20dp"

        android:layout_below="@+id/share"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp" />




</RelativeLayout>
